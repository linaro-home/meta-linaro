 {
@@ -10,11 +11,8 @@ check_tainted()
     fi
 }
 
-if [ ! -d tmp ]; then
-  mkdir tmp
-fi
-chmod 755 tmp
-cd tmp
+chmod 755 $TRINITY_TMP
+cd $TRINITY_TMP
 
 TAINT=$(cat /proc/sys/kernel/tainted)
 
@@ -27,7 +25,7 @@ do
 
   for i in `seq 1 $NR_PROCESSES`
   do
-    chmod 755 ../tmp
